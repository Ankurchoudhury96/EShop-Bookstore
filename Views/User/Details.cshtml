@model EShop.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="row">
    <div class="product-card text-center justify-content-center">
        <img src="~/Uploadpic/@Model.Ppic" height="300" width="300">
        <h5>@Model.Name</h5>
        <p>Description: @Model.Description</p>
        <p>Price: Rs.@Model.Price/-</p>
        <p>Category: @Model.Category</p>
        <div class="buttons">
            <a asp-page="/Cart/Add" asp-route-id="@Model.Pid" class="btn btn-success btn-sm">Add to Cart</a>
            <a asp-action="Checkout" asp-route-id="@Model.Pid" class="btn btn-success btn-sm">Buy Now</a>
            <a asp-action="Details" asp-route-id="@Model.Pid" class="btn btn-info btn-sm">Details</a>
        </div>
    </div>
</div>


<div> |
    <a asp-action="Index">Back to List</a>
</div>
