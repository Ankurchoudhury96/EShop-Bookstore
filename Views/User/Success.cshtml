@model IEnumerable<EShop.Models.Product>

@{
    ViewData["Title"] = "Success";
}

<h1>Thank You For Shoping With Us....</h1>
<h2>Buy More..</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-2">
                <div class="product-card text-center justify-content-center">
                    <img src="~/Uploadpic/@product.Ppic" height="140" width="140">
                    <h5>@product.Name</h5>
                    <p>Price: Rs.@product.Price/-</p>
                    <p>Category: @product.Category</p>
                    <div class="buttons">
                        <a asp-page="/Cart/Add" asp-route-id="@product.Pid" class="btn btn-success btn-sm">Add to Cart</a>
                        <a asp-action="Details" asp-route-id="@product.Pid" class="btn btn-info btn-sm">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>